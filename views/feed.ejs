    <div class="row justify-content-center">
        <div class="col-md-8"> 
            <ul class="list-unstyled">
                <% for(var i=0; i<posts.length; i++) { %>
                <li class="mb-4">
                    <div class="card">
                        <a href="/post/<%= posts[i]._id %>">
                            <img src="<%= posts[i].image %>" class="card-img-top" alt="...">
                        </a>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
